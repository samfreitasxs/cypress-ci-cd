pipeline {
    agent any
    
    stages {
        stage('Build') {
            steps {
                // Construir a imagem Docker
                sh 'docker build -t myjenkins-blueocean .'
            }
        }
        
        stage('Test') {
            steps {
                // Executar os testes do Cypress em um container Docker
                sh 'docker run -v $PWD:/app -w /app myjenkins-blueocean cypress run'
            }
        }
    }
}
