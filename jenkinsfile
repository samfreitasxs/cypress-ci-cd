pipeline {
    agent any
    
    stages {
        stage('Clone Repository') {
            steps {
                // Clonar o repositório do código-fonte
                git 'https://github.com/samfreitasxs/cypress-ci-cd.git'
            }
        }
        
        stage('Install Dependencies') {
            steps {
                // Instalar as dependências do projeto
                sh 'npm install'
            }
        }
        
        stage('Run Cypress Tests') {
            steps {
                // Executar os testes do Cypress
                sh 'npx cypress run'
            }
        }
    }
}
